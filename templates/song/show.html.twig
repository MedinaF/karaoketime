{% extends 'base.html.twig' %}

{% block title %}Détail : {{ song.title }}{% endblock %}

{% block body %}
    {# Titre et artiste de la chanson #}
    <h1>{{ song.title }} — {{ song.artist }}</h1>

    {# Affichage de la catégorie #}
    <p>
      <strong>Catégorie :</strong>
      {{ song.category.name }}
    </p>

    {# Affichage de l'image de couverture si elle existe #}
    {% if song.image %}
      <img src="{{ asset('uploads/' ~ song.image) }}" alt="{{ song.title }}" style="max-width:200px;">
    {% endif %}

    {# Affichage des paroles #}
    <p>
      <strong>Paroles :</strong><br>
      {{ song.lyrics|nl2br }}
    </p>

    {# Lien vers la vidéo YouTube #}
    <p>
      <a href="{{ song.youtubeLink }}" target="_blank">Voir sur YouTube</a>
    </p>

    {# Informations sur la date d'ajout et l'utilisateur #}
    <p>
      <small>Ajoutée le {{ song.createdAt|date('d/m/Y H:i') }} par {{ song.uploadedBy.username }}</small>
    </p>

    <hr>

    {# Lien de retour à la liste des chansons #}
    <a href="{{ path('song_index') }}">← Retour à la liste</a>
{% endblock