{% extends 'base.html.twig' %}

{% block title %}KaraokeTime - Accueil{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(135deg, #1a2980, #26d0ce);
            color: #fff;
            font-family: 'Segoe UI', Arial, sans-serif;
            min-height: 100vh;
            margin: 0;
        }
        .karaoke-container {
            max-width: 700px;
            margin: 60px auto;
            background: rgba(0,0,0,0.6);
            border-radius: 20px;
            box-shadow: 0 8px 32px 0 rgba(31,38,135,0.37);
            padding: 40px 30px;
            text-align: center;
        }
        .karaoke-title {
            font-size: 3em;
            font-weight: bold;
            letter-spacing: 2px;
            margin-bottom: 10px;
            color: #ffe066;
            text-shadow: 2px 2px 8px #000;
        }
        .karaoke-subtitle {
            font-size: 1.5em;
            margin-bottom: 30px;
            color: #fff;
        }
        .karaoke-btn {
            background: #ffe066;
            color: #1a2980;
            border: none;
            border-radius: 30px;
            padding: 15px 40px;
            font-size: 1.2em;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.2s;
            margin: 10px;
            text-decoration: none;
            display: inline-block;
        }
        .karaoke-btn:hover {
            background: #ffd700;
        }
        .karaoke-mic {
            font-size: 4em;
            margin-bottom: 20px;
            color: #fff;
            text-shadow: 2px 2px 8px #1a2980;
        }
    </style>
{% endblock %}

{% block body %}
